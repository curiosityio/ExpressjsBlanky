{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": ["node_modules/*", "@types/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["app/**/*", "@types/**/*"]
}
