{
  "name": "ExpressjsBlanky",
  "version": "0.1.0",
  "main": "app/server.js",
  "scripts": {
    "init": "npm install && bundle install",
    "_production:build": "npx babel app --out-dir dist --copy-files --extensions '.ts,.tsx'",
    "_production": "npx forever -m 5 dist/server.js",
    "test:integration": "NODE_ENV=test npx jest --testPathPattern=\".+tests/integration/.+.spec.ts\" --runInBand --forceExit",
    "test:unit": "NODE_ENV=test npx jest --testPathPattern=\".+tests/unit/.+.spec.ts\"",
    "test": "npx concurrently --names \"unit, integration\" -c \"blue,green\" \"npm run test:unit\" \"./bin/wait-for localhost:5433 -- npm run test:integration\"",
    "test:setup": "docker-compose -f docker/app/docker-compose.test.yml up --build -d",
    "dev:setup": "docker-compose -f docker/app/docker-compose.dev.yml up --build -d",
    "dev": "NODE_ENV=development npx concurrently --kill-others --names \"lint,node\" -c \"blue,green\" \"npx tsc --pretty --noEmit --watch\" \"npx nodemon --watch app --inspect=0.0.0.0 app/app_startup.ts\"",
    "production": "docker-compose -f docker/app/docker-compose.yml -f docker-compose.staging.override.yml -f docker-compose.prod.override.yml -f docker-compose.prod-test.override.yml up --build -d",
    "db:staging": "docker-compose -f docker/db/docker-compose.db.yml -f docker/db/docker-compose.db-staging.override.yml up --build -d",
    "db:production": "docker-compose -f docker/db/docker-compose.db.yml -f docker/db/docker-compose.db-staging.override.yml -f docker/db/docker-compose.db-production.override.yml up --build -d",
    "db:migrate:create": "npx sequelize migration:create",
    "db:migrate:run": "npx sequelize db:migrate",
    "db:migrate:undo": "npx sequelize db:migrate:undo",
    "generate:doc": "npx apidoc -i app/ -o docs/",
    "format": "npx prettier --write \"{app,tests}/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run generate:doc && git add docs && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "npm run format",
      "git add"
    ]
  },
  "author": "Levi Bostian <levi@curiosityio.com>",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bull": "^3.10.0",
    "bull-arena": "^2.6.3",
    "compression": "^1.7.4",
    "connect-sequence": "github:levibostian/connect-sequence#error-handler-fix",
    "connect-trim-body": "^0.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "0.0.1",
    "express-routes-versioning": "^1.0.1",
    "express-validator": "^5.3.1",
    "firebase-admin": "^8.0.0",
    "forever": "^1.0.0",
    "helmet": "^3.18.0",
    "honeybadger": "^1.3.0",
    "inversify": "^5.0.1",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.3",
    "postmark": "^2.2.6",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.8.9",
    "uid2": "^0.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/bluebird": "^3.5.26",
    "@types/bull": "^3.5.14",
    "@types/bull-arena": "^2.6.0",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-brute": "0.0.37",
    "@types/express-brute-redis": "0.0.1",
    "@types/express-routes-versioning": "^1.0.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.13",
    "@types/node": "^11.13.4",
    "@types/passport": "^1.0.0",
    "@types/passport-http": "^0.3.8",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/redis": "^2.8.13",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.11.0",
    "apidoc": "^0.17.7",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "concurrently": "^4.1.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "sequelize-cli": "^5.4.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.2"
  }
}
